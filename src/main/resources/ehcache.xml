<?xml version="1.0" encoding="UTF-8"?>



<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="true" monitoring="autodetect" dynamicConfig="true">

 <!--   <diskStore path="java.io.tmpdir" />
-->
	<diskStore path="user.home/SpringBoot/cache" />
	
  <defaultCache eternal="false" maxElementsInMemory="1000" overflowToDisk="false" overflowToOffHeap="false" diskPersistent="false"/>

<!-- Pour les réponses valides de le semaine courante (elles peuvent encore changées) -->
  <cache name="requetes"
         eternal="false"
         maxEntriesLocalHeap="1000"
         diskPersistent="true"
         timeToIdleSeconds="3600"
         timeToLiveSeconds="14400"
         memoryStoreEvictionPolicy="LFU">
  </cache>
  
<!--  Pour les menus des semaines passées ils ne devraient plus changer, on les gardes tant qu'il y de la place  -->
  <cache name="permanent"
         eternal="true"
         maxEntriesLocalHeap="1000"
         diskPersistent="true"
         maxBytesLocalDisk="100M"
         memoryStoreEvictionPolicy="FIFO">
  </cache>
  
<!--  pour les réponses en erreur peut-être avec une période courte -->
  <cache name="erreur"
  		eternal="false"
         maxEntriesLocalHeap="1000"
         diskPersistent="false"
         timeToIdleSeconds="3600"
         timeToLiveSeconds="3600"
         memoryStoreEvictionPolicy="LRU">
  </cache>
</ehcache>
